# AI Podcast Flow - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI/ML Services
# =============================================================================

# Anthropic Claude API for content generation
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Cloud Platform configuration
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# =============================================================================
# Podcast Hosting (Art19)
# =============================================================================

# Art19 podcast hosting platform
ART19_API_TOKEN=your_art19_api_token
ART19_SERIES_ID=your_series_id
ART19_API_BASE_URL=https://api.art19.com
ART19_AUTO_PUBLISH=false
ART19_ENABLED=true

# =============================================================================
# Social Media Integration
# =============================================================================

# Twitter API v2 credentials
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Social media settings
SOCIAL_MEDIA_ENABLED=true
SOCIAL_AUTO_POST=false

# =============================================================================
# Website Deployment (Vercel)
# =============================================================================

# Vercel deployment configuration
VERCEL_DEPLOY_HOOK=https://api.vercel.com/v1/integrations/deploy/...
VERCEL_API_TOKEN=your_vercel_api_token
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_TEAM_ID=your_vercel_team_id
VERCEL_CONTENT_API_ENDPOINT=https://your-site.vercel.app/api/episodes

# Website settings
WEBSITE_ENABLED=true

# =============================================================================
# Application Configuration
# =============================================================================

# Server settings
PORT=8080
HOST=0.0.0.0

# Application settings
LOG_LEVEL=INFO
DEBUG=false

# Processing settings
MAX_AUDIO_SIZE_MB=500
DEFAULT_LANGUAGE=en-US
PROCESSING_TIMEOUT_SECONDS=3600

# =============================================================================
# Optional: Alternative Services
# =============================================================================

# OpenAI API (alternative to Anthropic)
OPENAI_API_KEY=your_openai_api_key

# Whisper API (alternative transcription)
WHISPER_API_KEY=your_whisper_api_key

# Additional social media platforms
LINKEDIN_API_KEY=your_linkedin_api_key
INSTAGRAM_API_KEY=your_instagram_api_key

# =============================================================================
# Development/Testing
# =============================================================================

# Test mode settings
TEST_MODE=false
MOCK_EXTERNAL_APIS=false
SKIP_PUBLISHING=false

# Storage settings (for development)
TEMP_STORAGE_PATH=/tmp/podcast_processing
AUDIO_OUTPUT_PATH=/tmp/processed_audio